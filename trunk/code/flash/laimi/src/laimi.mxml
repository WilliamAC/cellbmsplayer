<?xml version="1.0" encoding="utf-8"?>
<mx:Application xmlns:mx="http://www.adobe.com/2006/mxml" layout="absolute" xmlns:ns1="Component.*" creationComplete="init()">
	<mx:Style>
		global {font-size:12px}
	</mx:Style>
	
	<mx:Script>
		<![CDATA[
			import Class.TimesCtr;
			import mx.controls.Alert;
			import Class.Game;
			
			public function init():void
			{
				Game.app = this;
				Game.matrix = mx;
				Game.gamer.matrix = umx;
				TimesCtr.optionTimeBar = optbar;
				TimesCtr.sumTimeBar = sumbar;
				Game.initGame();
			}
			public function click():void
			{
			   Alert.show(Game.getSendPoint().toString()+'_'+Game.gamer.keydwon);
			}
		]]>
	</mx:Script>
	<ns1:Matrix_Cpt id="mx" y="20" borderStyle="solid" horizontalCenter="0" height="201">
	</ns1:Matrix_Cpt>
	<ns1:UserMatrix_Cpt id="umx" horizontalCenter="50" top="370" height="202">
	</ns1:UserMatrix_Cpt>
	<ns1:Opt_Cpt horizontalCenter="0" top="380" height="32">
	</ns1:Opt_Cpt>
	<mx:ProgressBar id="sumbar" width="660" label="" height="10" horizontalCenter="0" mode="manual" top="334" labelPlacement="center"/>
	<mx:ProgressBar id="optbar" top="354" height="10" width="660" label="" horizontalCenter="0" mode="manual" labelPlacement="center"/>
</mx:Application>
